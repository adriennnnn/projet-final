{% extends 'base.html.twig' %}

{% block title %}ShowCase{% endblock %}

{% block body %}
    <h1>ShowCase</h1>
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ show_case.id }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ show_case.title }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ show_case.description }}</td>
                </tr>
            </tbody>

        </table>

{#   h-full  md:max-w-xl dark:border-gray-700 dark:bg-gray-800 flex-col items-center bg-white shadow-md md:flex-row m-24 lg:flex #}
        <div class="flex justify-center my-10 mx-24">
            <div class="bg-white flex grow">

                <div class="w-4/12">
                    {% if show_case.imageShowCases.values %}
                        <div class="lg:rounded-r-lg rounded-b-lg lg:rounded-bl-none bg-purple-400" >
                            <div class="text-white px-4 py-6 md:p-12 md:mx-6">
                                <h1 class="text-2xl font-semibold mb-6">{{ show_case.title }}</h1>
                                {# md:h-auto md:w-48 md:rounded-none md:rounded-l-lg #}
                                <img class="object-cover rounded-t-lg  h-48 w-96" src="{{ asset('uploads/' ~ show_case.imageShowCases.values[0].image)}}" alt="">
                            </div>
                        </div>
                    {% endif %}
                </div>
                <div class="w7/12">
                    <div class="px-4 py-6 md:p-12 md:mx-6">
                        <h1 class="text-2xl font-semibold mb-6">{{ show_case.title }}</h1>
                        <p class="mb-6 text-lg font-normal font-semibold">{{ show_case.description }}</p>
                        <h3 class="text-xl font-semibold mb-6">Pour contact</h3>
                            <p class="">Email ; </p>
                            <p>Téléphone ; </p>
                    </div>
                </div>

            </div>
        </div>



    </div>




    {# {{ include('show_case/_delete_form.html.twig') }} #}
{% endblock %}
