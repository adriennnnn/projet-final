<div class="grid md:grid-cols-12 m-10">
    <div class="md:col-span-6 bg-white p-10">
        {{ form_start(form) }}
        <div class="grid lg:grid-cols-4">
            <div class="lg:col-span-2">
                <div class="form-control pr-4">
                    {{ form_label(form.title, 'Indiquez le nom de votre succursale *') }}
                    <br>
                    {{ form_widget(form.title, {'attr': {'class': 'lable_company_size'}}) }}    
                </div>
                <div class="form-control pr-4 ">
                    {{ form_label(form.companyId, 'Choisissez la compagnie associée *') }}
                    <br>
                    {{ form_widget(form.companyId, {'attr': {'class': 'lable_company_size'}}) }}    
                </div>

                {# <div class="form-control pr-4 ">
